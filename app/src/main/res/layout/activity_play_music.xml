<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/img_previous"
            android:layout_width="@dimen/detail_width_icon"
            android:layout_height="@dimen/detail_width_icon"
            android:layout_marginBottom="16dp"
            android:padding="@dimen/detail_padding_image"
            android:src="@drawable/ic_previous_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_play"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="@dimen/detail_width_icon"
            android:layout_height="@dimen/detail_width_icon"
            android:layout_marginBottom="16dp"
            android:padding="@dimen/detail_padding_image"
            android:src="@drawable/ic_media_play_symbol_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_previous" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="@dimen/detail_width_icon"
            android:layout_height="@dimen/detail_width_icon"
            android:layout_marginBottom="16dp"
            android:padding="@dimen/detail_padding_image"
            android:src="@drawable/ic_next_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_play" />

    </android.support.constraint.ConstraintLayout>
</layout>
